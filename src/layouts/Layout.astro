---
import TheHeader from "../components/TheHeader.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="canonical" href={canonicalURL} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<TheHeader />

		<main id="root">
			<slot />
		</main>
	</body>
</html>
<style is:global>
	:root {
		--clr-primary: oklch(43.6% 0.148 142.5);
		--clr-primary-light: oklch(95.05% 0.051 163.05);
		--clr-primary-dark: oklch(41.7% 0.148 142.5);
		
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
	}
	code {
		font-family:
			Jetbrains Mono,
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	*, *::before, *::after {
		box-sizing: border-box;
	}
	* {
		margin: 0;
	}
	body {
		line-height: 1.5;
		-webkit-font-smoothing: antialiased;

		&:has(dialog[open]) {
			overflow: hidden;
		}
	}
	img, picture, video, canvas, svg {
		display: block;
		max-width: 100%;
	}
	input, button, textarea, select {
		font: inherit;
	}
	button,
	::file-selector-button {
		inline-size: fit-content;
		touch-action: manipulation;
		user-select: none;
	}
	p, h1, h2, h3, h4, h5, h6 {
		overflow-wrap: break-word;
	}
	a {
		text-decoration: none;
		color: inherit;
	}
	ul {
		list-style: none;
	}
	#root, #__next {
		isolation: isolate;
    padding: 1rem;
    max-inline-size: 60rem;
    margin-inline: auto;
	}

	button {
		padding: 0.5rem 1rem;
		border-radius: 0.25rem;
		border: 1px solid var(--clr-primary-light);
		cursor: pointer;
		font-size: 1rem;
		font-weight: bold;
		transition: background-color 0.2s ease-in-out;
		color: var(--clr-primary);
		background-color: var(--clr-primary-light);

		&:focus-visible {
			outline: 2px solid var(--clr-primary);
		}
	}

	input {
		inline-size: 100%;
		padding: 0.5rem 1rem;
		border: 1px solid gray;
		border-radius: 0.25rem;

		&:focus-visible {
			border: 1px solid transparent;
			outline: 2px solid var(--clr-primary);
		}

		&:invalid {
			border: 1px solid red;

			&:focus-visible {
				outline: 2px solid red;
			}
		}
	}

	label:has(span + input), label:has(span + textarea), label:has(span + show-password) {
    display: grid;
    gap: 0.25rem;
  }

  label:has(span) {
    span:first-of-type {
      font-weight: 600;
    }
  }

	p[data-hint-text] {
    font-size: 0.875rem;
	}
</style>
